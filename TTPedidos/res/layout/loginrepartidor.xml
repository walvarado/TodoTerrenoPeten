<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@drawable/principal_background">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_titulo_textview" style="@style/CodeFont_title"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" android:background="@drawable/secundary_background" android:gravity="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_usuario_textview" style="@style/CodeFont_label"/>


        <EditText
            android:id="@+id/loginrepartidor_usuario_edittext"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="@string/login_usuario_hint" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_contrasenia_textview" style="@style/CodeFont_label"/>

        <EditText
            android:id="@+id/loginrepartidor_contrasenia_edittext"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="@string/login_contrasenia_hint" android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="center">

            <Button
                android:id="@+id/loginrepartidor_entrar_button"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="@string/login_entrar_button" style="@style/Button_001"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_mercadisa" />

    </LinearLayout>

</LinearLayout>